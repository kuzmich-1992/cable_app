<h4>current members</h4>
<ul id="member-list">
  <% @room_users.each do |member| %>
    <li><%= member.user.username %></li>
  <% end %>
</ul>
<h4>select for add members</h4>
<ul id="add_user">
<% @users.each do |user| %>
  <li>
    <%= user.username %>
    <%= check_box 'user.id', user.id, class: :is_added %>
    <input type='hidden' class='user_id' value="<%= user.id %>">
  </li>
<% end %>
<br>
<input type='hidden' id='room_user_id' value="<%= params[:format] %>">
<p><input type="submit" value="Add" id="add_users" class="btn btn-warning"></p>
</ul>
<h4>select for delete members</h4>
<ul id="delete_user">
<% @room_users.each do |room_user| %>
  <li>
    <%= room_user.user.username %>
    <%= check_box 'room_user.id', room_user.id, class: :is_deleted %>
    <input type='hidden' class='room_user_id' value="<%= room_user.id %>">
  </li>
<% end %>
<br>
<input type='hidden' id='room_user.id' value="<%= params[:format] %>">
<p><input type="submit" value="Delete" id="delete_users" class="btn btn-warning"></p>
</ul>